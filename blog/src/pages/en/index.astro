---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/ui/Navbar';
import { getAllArticles } from '../../utils/content';

const articles = getAllArticles('en-US').slice(0, 6);
---

<Layout title="CommitToLearn - Study Blog">
  <Navbar client:load currentLang="en-US" />
  
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="px-4 py-12 border-b border-gray-800">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-[1.2fr_0.8fr] gap-8 mb-8">
          <!-- Hero Content -->
          <div>
            <h1 class="text-5xl md:text-6xl font-bold mb-4 text-white">
              <span class="text-white">Commit</span>ToLearn
            </h1>
            <p class="text-lg text-gray-400 mb-6 max-w-xl">
              Exploring technology through technical articles. Algorithms, AI, DevOps and development.
            </p>
            <div class="flex gap-3 mb-8 flex-wrap">
              <a href="#articles" class="px-6 py-3 bg-black text-white border border-gray-800 hover:bg-gray-900 transition-colors font-medium">
                View Articles
              </a>
              <a href="/en/notes" class="px-6 py-3 bg-transparent text-white border border-gray-800 hover:bg-gray-900 transition-colors font-medium">
                Notes
              </a>
            </div>
            <!-- Stats Grid -->
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-black border border-gray-800 p-4">
                <div class="text-3xl font-bold text-white mb-1">40+</div>
                <div class="text-xs uppercase tracking-wide text-gray-500 font-semibold">Articles</div>
              </div>
              <div class="bg-black border border-gray-800 p-4">
                <div class="text-3xl font-bold text-white mb-1">100+</div>
                <div class="text-xs uppercase tracking-wide text-gray-500 font-semibold">Notes</div>
              </div>
            </div>
          </div>

          <!-- Hero Aside -->
          <div class="bg-gradient-to-br from-gray-900 to-gray-950 border border-gray-800 p-6">
            <h3 class="text-sm uppercase tracking-wider font-semibold mb-3 text-white">Principles</h3>
            <p class="text-sm text-gray-400 mb-4">
              Continuous learning through practice and documentation.
            </p>
            <ul class="flex flex-col gap-2 text-sm">
              <li class="bg-gray-950 border border-gray-800 p-2 leading-tight font-medium text-gray-300">
                Code explained, not memorized
              </li>
              <li class="bg-gray-950 border border-gray-800 p-2 leading-tight font-medium text-gray-300">
                From theory to real implementation
              </li>
              <li class="bg-gray-950 border border-gray-800 p-2 leading-tight font-medium text-gray-300">
                Share technical knowledge
              </li>
              <li class="bg-gray-950 border border-gray-800 p-2 leading-tight font-medium text-gray-300">
                Learn by doing and documenting
              </li>
              <li class="bg-gray-950 border border-gray-800 p-2 leading-tight font-medium text-gray-300">
                Solve real problems with code
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Articles -->
    <section id="articles" class="py-20 px-4 max-w-7xl mx-auto">
      <h2 class="text-4xl font-bold mb-12 text-white">
        Latest Articles
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {articles.map((article) => (
          <a href={`/articles/en-${article.slug}`} class="group block">
            <article class="h-full border border-gray-800 hover:border-gray-600 transition-colors p-6 bg-black">
              <h3 class="text-xl font-bold mb-3 text-white group-hover:text-gray-300 transition-colors line-clamp-2">
                {article.title}
              </h3>
              <p class="text-gray-400 text-sm mb-4 line-clamp-3">
                {article.excerpt}
              </p>
              <div class="flex items-center text-gray-500 text-sm">
                <span>Read more →</span>
              </div>
            </article>
          </a>
        ))}
      </div>

      <div class="text-center mt-12">
        <a
          href="/en/articles"
          class="inline-block px-8 py-3 border border-gray-700 text-gray-300 hover:bg-gray-900 transition-colors"
        >
          View All Articles
        </a>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-12 px-4 border-t border-gray-800 mt-20">
      <div class="max-w-7xl mx-auto text-center">
        <div class="flex justify-center gap-4 mb-4">
          <a href="https://github.com/matheussricardoo" target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-white transition-colors">
            <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
          <a href="https://www.linkedin.com/in/matheus-ricardo-426452266/" target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-white transition-colors">
            <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
        <p class="text-gray-500 text-sm">
          © 2025 CommitToLearn
        </p>
      </div>
    </footer>
  </main>
</Layout>
